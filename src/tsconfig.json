{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "removeComments": true,
    "declaration": false,
    "experimentalDecorators": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@nativescript/webpack/dist/transformers/NativeClass",
        "type": "raw"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "index.d.ts",
    "references.d.ts",
    "advanced-webview.android.ts",
    "advanced-webview.ios.ts"
  ]
}
